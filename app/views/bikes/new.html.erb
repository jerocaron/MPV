
<div class="container">
  <h1>Ajouter un vélo</h1>
    <%= simple_form_for(@bike) do |f| %>
    <%= f.input :category, collection: ['Vtt', 'Vtc', 'Route', 'Bmx', 'Enfant'], prompt: 'Select category' %>
    <%= f.input :marque, collection: ['Peugeot', 'Btwin', 'Canondale'], prompt: 'Select marque' %>
    <%= f.input :description, placeholder: 'your description', error: 'Description is mandatory' %>
    <%= f.input :address, placeholder: 'your address', error: 'Address is mandatory' %>
    <%= f.input :zipcode, placeholder: 'your zipcode', error: 'zipcode is mandatory' %>
    <%= f.input :price_per_day, placeholder: 'votre prix par jour (€)', error: 'le prix n\'est pas renseigné' %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add bike", class: "btn btn-primary" %>
    <% end %>
</div>


