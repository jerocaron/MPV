<div class="container newbike">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <h2 class="margin-top-0 wow fadeIn">Nouveau vélo à proposer à la location</h2>
            <hr class="primary">
        </div>

        <div class="col-lg-10 col-lg-offset-1 text-center">
            <div class="contact-form row">
              <%= simple_form_for(@bike) do |f| %>
                <div class="col-md-6">
                  <%= f.input :category, label: 'Catégorie', collection: ['VTT', 'VTC', 'Route', 'BMX', 'Enfant'], prompt: 'Selectionnez la categorie' %>
                </div>
                <div class="col-md-6">
                  <%= f.input :marque, label: 'Marque', collection: ['Peugeot', 'Btwin', 'Canondale'], prompt: 'Selectionnez la marque' %>
                </div>
                <div class="col-md-12">
                  <%= f.input :description, label: 'Description', placeholder: 'Description : ex : vélo en très bon état acheté en 2017', error: 'La description est requise' %>
                </div>
                <div class="col-md-6">
                  <%= f.input :address, label: 'Adresse', placeholder: 'Entrez votre adresse', error: "L'address est requise" %>
                </div>
                <div class="col-md-6">
                  <%= f.input :zipcode, label: 'Code Postal', placeholder: 'Code postal', error: 'Le code postal est requis' %>
                </div>
                <div class="col-md-6">
                  <%= f.input :age, label: 'Âge du vélo', placeholder: 'Age du vélo', error: 'Le vélo doit avoir un age' %>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <%= f.input :photo %>
                    <%= f.input :photo_cache, as: :hidden %>
                </div>
                <div class="col-md-4 col-md-offset-4">
                  <%= f.submit "Ajouter un vélo", class: "btn btn-primary btn-block btn-lg" %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
</div>


