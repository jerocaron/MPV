<header id="first">
   <div class="header-content">
       <div class="inner">
           <h1 class="cursive">Louez facilement votre vélo</h1>
           <hr>
      <a href="#rentabike" class="btn btn-primary btn-xl">Louer un vélo</a>&nbsp; <a href="bikes" class="btn btn-primary btn-xl page-scroll">Louer ton vélo</a>
      <br>

       </div>
   </div>
</header>
 <section id="rentabike">
  <div class= "container">
    <div class="search_bar">
      <%= simple_form_for 'search', :url => root_path, :method => :get do |f| %>
        <%= f.input :address, label: 'Choix de votre ville', collection: ["Paris", "Lyon", "Lille"] %>
        <%= f.button :submit, 'Rechercher', class: "btn btn-primary fullwidthbutton" %>
      <% end %>
    </div>
<hr>
    <div class = "row">
      <div class="col-lg-08 col-lg-offset-2">
        <div
          id="map"
          style="width: 70%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

        </div>
        </div>
      </div>
  </div>
 </div>
</div>
<hr>

  <div class="container">
    <div class="row">

    <% @bikes.each do |bike| %>
      <%= link_to(bike_path(bike.id)) do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.1)), url(<%= bike.photo %>);">
            <div class="card-category"><%= bike.category %></div>
            <div class="card-description">
              <h2><%= bike.description.first(30) %></h2>
              <p><%= bike.address %></p>
            </div>
            <div class="card-avatar"><%= cl_image_tag(bike.profil.photo,:transformation=>[
              {:width=>350, :height=>350, :gravity=>"face", :radius=>"max", :crop=>"crop"},
              {:width=>50, :crop=>"scale"}], class: "imagestyleprofil") %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
