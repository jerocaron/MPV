          <div class="card-category"><%= bike.category %></div>
          <div class="card-description">
            <h2><%= bike.description.first(30) %></h2>
            <p><%= bike.address %></p>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star-half-alt"></i>
          </div>
          <i class="fas fa-user-circle card-user"></i>
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</section>