<div class="container signupview">
  <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <h2 class="margin-top-0 wow fadeIn text-center">Modifier mon mot de passe</h2>
      <hr class="primary">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        required: false,
                        label: "Mot de Passe",
                        error: "Le mot de passe ne peut être vide",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        label: "Confirmation du mot de Passe",
                        error: "Les mots de passe ne coïncident pas",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos changement",
                        label: "Mot de Passe actuel",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Mettre à jour", class: "btn btn-primary fullwidthbutton" %>
          </div>
        <% end %>
        <br>
        <hr class="secondary">
        <h2 class="margin-top-0 wow fadeIn text-center">Supprimer mon compte</h2>
        <hr class="primary">
        <p class="text-center">Insatisfait? : <%= link_to "Supprimer mon compte", registration_path(resource_name), class:"btn btn-secondary", data: { confirm: "Êtes vous sûr ?" }, method: :delete %></p>
        <%= link_to "Retour à l'édition de mon profil", :back, class: "btn btn-ghost fullwidthbutton" %>
    </div>
  </div>
</div>
