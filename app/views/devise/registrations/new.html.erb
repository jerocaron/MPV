<div class="container signupview">
  <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12">
      <h1 class="margin-top-0 wow fadeIn text-center">S'inscrire</h1>
      <hr class="primary">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        placeholder: "johndoe@gmail.com",
                        autofocus: true,
                        error: "L'email est requis",
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        label: "Mot de Passe",
                        error: "Le mot de passe doit contenir au minimum 6 caractÃ¨res",
                        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: "Veuillez confirmer votre mot de Passe",
                        error: "Les deux mots de passe ne concordent pas",
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class: "btn btn-primary fullwidthbutton" %>
          </div>
        <% end %>

        <div class="text-center linksshared"><%= render "devise/shared/links" %></div>
    </div>
  </div>
</div>

